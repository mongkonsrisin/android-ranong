<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context="th.go.ranong.loveranong.activity.MainActivity">
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="16dp"
       android:src="@drawable/whiteicon"
       android:scaleType="fitCenter"/>
   <me.zhanghai.android.materialprogressbar.MaterialProgressBar
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:indeterminate="true"
       app:mpb_progressStyle="circular"
       android:layout_centerHorizontal="true"
       app:mpb_progressTint="#FFFFFF"
       app:mpb_indeterminateTint="#FFFFFF"
       android:layout_above="@+id/tvVersion"
       />
   <TextView
       android:id="@+id/tvVersion"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:text="V 1.0.20190303"
       android:textColor="#FFFFFF"
       android:textSize="14sp"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="8dp"
       android:gravity="center"/>
</RelativeLayout>
